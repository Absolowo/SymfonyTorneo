{% extends 'base.html.twig' %}

{% block title %}OPTCG - Register{% endblock %}

{% block body %}
<section class="container py-5">
    <div class="row text-center pt-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1">Register</h1>
            <p>
                You only need to provide us with this information to be part of our community!
            </p>
        </div>
    </div>
    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nombre) }}
        {{ form_row(registrationForm.apellidos) }}
        {{ form_row(registrationForm.telefono) }}
        {{ form_row(registrationForm.jid) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
</section>
{% endblock %}
